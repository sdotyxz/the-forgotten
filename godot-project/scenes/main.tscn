<?xml version="1.0" encoding="UTF-8"?>
<!-- The Forgotten - Main Scene -->
<scene format="3">
  <node name="Main" type="Node3D">
    <!-- Camera Setup -->
    <node name="Camera3D" type="Camera3D" parent=".">
      <transform origin="10, 10, 10" rotation_degrees="-30, 45, 0"/>
      <property name="projection" value="1"/>
      <property name="size" value="15"/>
      <property name="near" value="0.1"/>
      <property name="far" value="1000"/>
    </node>
    
    <!-- Lighting (for depth calculation) -->
    <node name="DirectionalLight3D" type="DirectionalLight3D" parent=".">
      <transform rotation_degrees="-45, 45, 0"/>
      <property name="shadow_enabled" value="true"/>
    </node>
    
    <!-- Cafe Environment Container -->
    <node name="CafeEnvironment" type="Node3D" parent=".">
      <!-- Placeholder for cafe level -->
      <node name="PlaceholderFloor" type="CSGBox3D" parent="CafeEnvironment">
        <transform origin="0, -0.5, 0"/>
        <property name="size" value="20, 1, 20"/>
      </node>
    </node>
    
    <!-- UI Layer -->
    <node name="CanvasLayer" type="CanvasLayer" parent=".">
      <node name="UI" type="Control" parent="CanvasLayer">
        <property name="layout_mode" value="3"/>
        <property name="anchors_preset" value="15"/>
        <property name="grow_horizontal" value="2"/>
        <property name="grow_vertical" value="2"/>
        
        <!-- Item List Container -->
        <node name="ItemListContainer" type="Panel" parent="CanvasLayer/UI">
          <property name="layout_mode" value="1"/>
          <property name="anchors_preset" value="5"/>
          <property name="offset_left" value="-300"/>
          <property name="offset_right" value="300"/>
          <property name="offset_bottom" value="60"/>
          <property name="grow_horizontal" value="2"/>
        </node>
      </node>
      
      <!-- Post-Processing 1-bit Shader -->
      <node name="PostProcess" type="ColorRect" parent="CanvasLayer">
        <property name="layout_mode" value="1"/>
        <property name="anchors_preset" value="15"/>
        <property name="grow_horizontal" value="2"/>
        <property name="grow_vertical" value="2"/>
        <property name="mouse_filter" value="1"/>
        <!-- Shader material will be attached here -->
      </node>
    </node>
    
    <!-- Game Manager -->
    <node name="GameManager" type="Node" parent=".">
      <script path="res://scripts/game_manager.gd"/>
    </node>
  </node>
</scene>
